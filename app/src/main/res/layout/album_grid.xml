<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:album_grid_card="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_grid_card"
    android:layout_width="fill_parent"
    android:layout_height="200sp"
    album_grid_card:cardCornerRadius="3sp"
    android:layout_margin="5sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ImageView
            android:layout_weight="8"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:id="@+id/album_art"
            android:foregroundGravity="center"
            android:layout_centerHorizontal="true"
            android:background="@color/defaultCardBg"
            android:src="@drawable/ic_headset_white_24dp"/>
        <TextView
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_below="@+id/album_art"
            android:id="@+id/album_title"
            android:text="Unknown"
            android:fontFamily="sans-serif-normal"
            android:textSize="15sp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:layout_margin="3sp"
            android:padding="2sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
